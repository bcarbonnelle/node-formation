<div class="single">
    <a href="/magasins/{{magasin.id}}/Edit">Edit</a>
    <div class="single__hero">
        <img src="/uploads/{{magasin.image}}" alt="" class="single__image">
        <h2 class="title title--single">{{magasin.name}}</h2>        
    </div>
    <div class="single__details inner">
        <img src="{{staticMap magasin.location.coordinates}}" alt="map">
        <p class="single__location">
            {{magasin.description}}
        </p>
        
    </div>
</div>


